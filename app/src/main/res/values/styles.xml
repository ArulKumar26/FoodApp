    <style name="EditProfileTextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/EditProfileTextInputLayoutHint</item>
        <item name="errorTextAppearance">@style/EditProfileTextInputLayoutError</item>
    </style>

    <style name="EditProfileTextInputLayoutEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:background">@drawable/edit_profile_edt_bg</item>
        <item name="android:longClickable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">@dimen/_15sdp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">@dimen/_15sdp</item>
    </style>


    <style name="EditProfileTextInputLayoutHint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/black</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/black</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/black</item>
        <item name="android:colorActivatedHighlight">@color/black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

