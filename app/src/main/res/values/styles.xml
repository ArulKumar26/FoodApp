<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Base application custom theme. -->
    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
     </style>

    <style name="TextAppearance.Text.Medium" parent="android:TextAppearance">
     </style>

    <style name="TextAppearance.Text.Light" parent="android:TextAppearance">
     </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <style name="TextViewStyleflex" parent="MW">

        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextStyle.Heading.Primary" parent="TextStyle">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Medium</item>
    </style>

    <style name="TextStyle.Heading.Secondary" parent="TextStyle">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Medium</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Title.Sub" parent="TextStyle">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Title.Medium" parent="TextStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>


    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem" />

    <style name="TextStyle.Title.Small" parent="TextStyle">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Title.Tiny" parent="TextStyle">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Light</item>
    </style>
    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="CustomCardCornerss" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_cornerss</item>
    </style>
    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/_30sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_30sdp</item>
    </style>

    <style name="ShapeAppearance_custom_cornerss" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_30sdp</item>
        <item name="cornerSizeTopRight">@dimen/_30sdp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_25sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:ems">15</item>
        <item name="android:layout_gravity">center</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="cornerRadius">@dimen/_30sdp</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Medium</item>
    </style>


    <style name="ButtonStyleoutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:gravity">center</item>
        <item name="android:ems">15</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="cornerRadius">@dimen/_25sdp</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/colorPrimary</item>

        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/shadow</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:longClickable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Medium</item>
    </style>

    <style name="ThemeOverlay.MySwitchCompat" parent="">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/drawable_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_55sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:textColorHint">@color/Darkgrey</item>
        <item name="android:theme">@style/TextInputLayoutAppearance</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/TextInputLayoutHint</item>
        <item name="errorTextAppearance">@style/TextInputLayoutError</item>

    </style>

    <style name="TextInputLayoutEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:background">@drawable/et_background_grey</item>
        <item name="android:longClickable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColorHint">@color/black</item>

        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">@dimen/_10sdp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">@dimen/_10sdp</item>
    </style>


    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/grey</item>
        <item name="chipStrokeWidth">0.3dp</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TextInputLayoutHint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/Darkgrey</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextInputLayoutError" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

